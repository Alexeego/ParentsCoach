<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConnectionFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/smiley_mal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/text_authorization"
            android:id="@+id/textAuthorization"
            android:layout_gravity="center_horizontal|bottom"
            android:textIsSelectable="false"
            android:singleLine="false"
            android:linksClickable="false"
            android:textColor="#ffffff"
            android:textSize="22dp"
            android:textStyle="bold"
            android:layout_alignWithParentIfMissing="false"
            android:layout_above="@+id/relativeLayout"
            android:layout_alignStart="@+id/relativeLayout"
            android:layout_marginStart="39dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/text_registration"
            android:id="@+id/textRegestration"
            android:layout_gravity="center_horizontal|bottom"
            android:textIsSelectable="false"
            android:singleLine="false"
            android:linksClickable="false"
            android:textColor="#ffffff"
            android:textSize="22dp"
            android:textStyle="bold"
            android:layout_above="@+id/relativeLayout"
            android:layout_alignEnd="@+id/relativeLayout"
            android:layout_marginEnd="24dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:id="@+id/relativeLayout"
            android:background="#ffffff"
            android:layout_centerVertical="true">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:baselineAligned="false"
                android:padding="10dp"
                android:id="@+id/linearLayoutAuthorization"
                android:layout_alignParentStart="false"
                android:layout_centerHorizontal="true">


                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/editTextNameAuthorization"
                    android:hint="Введите имя"
                    android:layout_gravity="center_horizontal"
                    android:enabled="true"/>

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:id="@+id/editTextPasswordAuthorization"
                    android:layout_gravity="center_horizontal"
                    android:hint="Введите пароль"
                    android:enabled="true"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_authorization"
                    android:id="@+id/buttonAuthorization"
                    android:layout_gravity="center_horizontal"
                    android:enabled="true"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|top"
                android:baselineAligned="false"
                android:padding="10dp"
                android:id="@+id/linearLayoutRegistration"
                android:visibility="invisible"
                android:layout_centerHorizontal="true">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/editTextNameReg"
                    android:hint="Введите имя"
                    android:layout_gravity="center_horizontal"
                    android:enabled="true" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:id="@+id/editTextPasswordRegFirst"
                    android:layout_gravity="center_horizontal"
                    android:hint="Введите пароль"
                    android:enabled="true" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:id="@+id/editTextPasswordRegSecond"
                    android:layout_gravity="center_horizontal"
                    android:hint="Повторите пароль"
                    android:enabled="true" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Зарегистрироваться"
                    android:id="@+id/buttonReg"
                    android:layout_gravity="center_horizontal"
                    android:enabled="true" />
            </LinearLayout>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:background="@drawable/facebook"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView3"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/google" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="или войдите через"
                android:id="@+id/textView6"
                android:layout_above="@+id/imageButton"
                android:layout_alignStart="@+id/imageButton"
                android:layout_marginLeft="10dp" />

        </RelativeLayout>

    </RelativeLayout>

</FrameLayout>
